{
    "manifestversion": 1,
    "public": true,
    "id": "jfrog-artifactory",
    "version": "2.0.0",
    "name": "JFrog Artifactory Integration",
    "description": "Integrate your JFrog Artifactory with Visual Studio Team Service.",
    "publisher": "JFrog",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "images/jfrog.png"
    },
    "scopes": [
        "vso.build",
        "vso.build_execute"
    ],
    "categories": [
        "Build and release"
    ],
    "tags": [
        "JFrog",
        "Artifactory",
        "Artifact",
        "Repository"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://www.jfrog.com"
        },
        "learn": {
            "uri": "https://www.jfrog.com/confluence/display/RTF/Welcome+to+Artifactory"
        },
        "support": {
            "uri": "https://www.jfrog.com/support"
        }
    },
    "branding": {
        "color": "#43a047",
        "theme": "light"
    },
    "contributions": [
        {
            "id": "artifactory-service",
            "description": "Service Endpoint type for Artifactory connections",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "artifactoryService",
                "displayName": "Artifactory Server",
                "url": {
                    "displayName": "Server Url",
                    "helpText": "Specify the root URL of your Artifactory installation, like http://repo.jfrog.org/artifactory"
                },
                "dataSources": [
                    {
                        "name": "TestConnection",
                        "endpointUrl": "{{endpoint.url}}/api/plugins",
                        "resourceUrl": "",
                        "resultSelector": "jsonpath:$.values[*]",
                        "headers": [
                        ],
                        "authenticationScheme": null
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username",
                                "description": "User with permissions to deploy to the Artifactory server",
                                "inputMode": "textbox",
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "Password",
                                "description": "Password for the user entered above",
                                "inputMode": "passwordbox",
                                "isConfidential": true,
                                "validation": {
                                    "isRequired": false,
                                    "dataType": "string"
                                }
                            }
                        ]
                    }
                ]
            }
        },
        {
            "id": "artifactory-build-info-tab",
            "type": "ms.vss-build-web.build-results-tab",
            "description": "A tab in build result to enforce Artifactory integration",
            "targets": [
                "ms.vss-build-web.build-results-view"
            ],
            "properties": {
                "name": "JFrog Artifactory",
                "uri": "artifactory-build-info.html"
            }
        },
        {
            "id": "promote-build-action",
            "type": "ms.vss-web.action",
            "description": "Promote a terminated build to JFrog Artifactory",
            "targets": [
                "ms.vss-build-web.completed-build-menu"
            ],
            "properties": {
                "text": "Promote to JFrog Artifactory",
                "title": "Promote to JFrog Artifactory",
                "uri": "promote-build-action.html"
            }
        },
        {
            "id": "setup-build-action",
            "type": "ms.vss-web.action",
            "description": "Setup a build definition with JFrog Artifactory",
            "targets": [
                "ms.vss-build-web.build-definition-menu"
            ],
            "properties": {
                "text": "Setup JFrog Artifactory",
                "title": "Setup JFrog Artifactory",
                "uri": "setup-build-action.html"
            }
        },
        {
            "id": "setupBuildDialog",
            "type": "ms.vss-web.control",
            "description": "The content to be displayed on setup Jfrog Artifactory action dialog",
            "targets": [],
            "properties": {
                "uri": "setup-build-dialog.html?id={{buildDefId}}"
            }
        },
        {
            "id": "jfrog-artifactory-deployer-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "JFrogArtifactoryDeployer"
            }
        },
        {
            "id": "jfrog-artifactory-downloader-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "JFrogArtifactoryDownloader"
            }
        },
        {
            "id": "artifactory-generic-upload",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ArtifactoryGenericUpload"
            }
        },
        {
            "id": "artifactory-generic-download",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ArtifactoryGenericDownload"
            }
        },
        {
            "id": "artifactory-publish-build-info",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "ArtifactoryPublishBuildInfo"
            }
        }
    ],
    "files": [
        {
            "path": "artifactory-build-info.html",
            "addressable": true
        },
        {
            "path": "setup-build-action.html",
            "addressable": true
        },
        {
            "path": "setup-build-dialog.html",
            "addressable": true
        },
        {
            "path": "lib",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "css",
            "addressable": true
        },
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "JFrogArtifactoryDeployer"
        },
        {
            "path": "JFrogArtifactoryDownloader"
        },
        {
            "path": "ArtifactoryGenericUpload"
        },
        {
            "path": "ArtifactoryGenericDownload"
        },
        {
            "path": "ArtifactoryPublishBuildInfo"
        }
    ]
}
